<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Order_details"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/arrow_image"
        app:layout_constraintTop_toTopOf="@id/arrow_image"
        app:layout_constraintBottom_toBottomOf="@id/arrow_image"


        />


    <ImageView
        android:id="@+id/Imageview"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@drawable/food_image"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="@+id/imageview"
        app:layout_constraintBottom_toBottomOf="@+id/imageview"
        app:layout_constraintLeft_toRightOf="@id/imageview"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@drawable/food_item1"
        app:layout_constraintTop_toBottomOf="@id/arrow_image"
        app:layout_constraintLeft_toLeftOf="@id/arrow_image"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="712dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/items_ordered"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18dp"


        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintTop_toTopOf="@id/textView3"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@id/Imageview"


        app:layout_constraintLeft_toRightOf="@id/Imageview"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="See_details"
        android:textSize="15dp"
        android:layout_marginTop="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintLeft_toLeftOf="@id/textView3"
        />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"



        android:src="@drawable/ic_baseline_arrow_forward_ios_24"

        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintLeft_toRightOf="@id/textView4"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        android:layout_marginBottom="20dp"
        android:alpha="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Id"
        app:layout_constraintLeft_toLeftOf="@id/imageview"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        android:layout_marginTop="30dp"

        />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDERNUMBER4867392208600039"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/textView5"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct 23,2019 9;08 PM"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toTopOf="@id/textView8"
        app:layout_constraintBottom_toBottomOf="@id/textView8"
        app:layout_constraintRight_toRightOf="@id/textView6"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Payment Mode"
        app:layout_constraintLeft_toLeftOf="@id/textView8"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONEPE"
        app:layout_constraintRight_toRightOf="@id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="@id/textView10"
        app:layout_constraintBottom_toBottomOf="@id/textView10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        android:layout_marginBottom="20dp"
        android:alpha="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintLeft_toLeftOf="@id/textView10"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFICE"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:layout_constraintLeft_toRightOf="@id/location"/>
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Floor,Hno 12, Road no 37 ,Back side\n of MGS Hospital ,West Punjabi Bagh ,\nPunjabi Bagh ,Delhi,110026,India\n\nInstruction:Call on arrival,bring cutlery"
        app:layout_constraintTop_toBottomOf="@id/office"
        app:layout_constraintLeft_toLeftOf="@id/office"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/yummy"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yummy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preparing Dinner."
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@id/yummy"
        app:layout_constraintLeft_toLeftOf="@id/yummy"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected arrival time:"
        app:layout_constraintTop_toBottomOf="@id/dinner"
        app:layout_constraintLeft_toLeftOf="@id/dinner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:51 PM"
        app:layout_constraintTop_toTopOf="@id/exp"
        app:layout_constraintLeft_toRightOf="@id/exp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/exp"
        app:layout_constraintLeft_toLeftOf="@id/exp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FFFAFA"
        app:cardCornerRadius="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_location_on_24"
                app:layout_constraintTop_toTopOf="@id/card"
                android:layout_marginTop="18dp"
                app:layout_constraintLeft_toLeftOf="@id/card"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Order"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@id/loc"
                app:layout_constraintTop_toTopOf="@id/loc"
                android:layout_marginLeft="5dp"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Issue"
        app:layout_constraintTop_toTopOf="@id/shape"
        app:layout_constraintLeft_toLeftOf="@id/shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>





</androidx.constraintlayout.widget.ConstraintLayout>